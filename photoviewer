<body>
<div id="photo-container">
    <img id="current-photo" src="photo1.jpg" alt="Photo">
    <button id="prev-button" class="nav-button">Previous</button>
    <button id="next-button" class="nav-button">Next</button>
</div>

<script>
// Define image URLs
var imageUrls = ["photo1.jpg", "photo2.jpg", "photo3.jpg", "photo4.jpg"];

// Circular doubly linked list node
function Node(data) {
    this.data = data;
    this.prev = null;
    this.next = null;
}

// Create circular doubly linked list from image URLs
var head = null;
var current = null;
for (var i = 0; i < imageUrls.length; i++) {
    var newNode = new Node(imageUrls[i]);
    if (!head) {
        head = newNode;
        current = newNode;
    } else {
        current.next = newNode;
        newNode.prev = current;
        current = newNode;
    }
}
// Make the list circular
if (head) {
    head.prev = current;
    current.next = head;
}

// Function to insert a new photo
function insertPhoto() {
    var imageUrl = prompt("Enter the URL of the photo:");
    if (imageUrl) {
        var newNode = new Node(imageUrl);
        newNode.next = current.next;
        current.next.prev = newNode;
        current.next = newNode;
        newNode.prev = current;
        displayCurrentPhoto(); // Update the displayed photo
    }
}

function deletePhoto() {
    if (!current.next || current.next === head) {
        alert("No photo to delete.");
        return;
    }

    var deletedNode = current.next;
    current.next = deletedNode.next;
    deletedNode.next.prev = current;
    deletedNode.next = null;
    deletedNode.prev = null;

    // Optionally, you can free up the memory occupied by the deleted node if needed
    // deletedNode = null;

    displayCurrentPhoto();
}
</script>

</body>
</html>

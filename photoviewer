<style>
    body{
        background-color: #f0f4f9
    }
    #photo-container {
        position: relative;
        width: 100%;
        height: 100%;
    }
    #current-photo {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }
    .nav-button {
        position: absolute;
        top: 45%;
        padding: 15px;
        cursor: pointer;
        font-size: 15px;
        font-weight: bold;
        border-radius: 5px;
        background-color: white;
        border: outset;
    }
    #prev-button {
        left: 10px;
    }
    #next-button {
        right: 10px;
    }
</style>
